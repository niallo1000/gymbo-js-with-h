{{> menu id="updatereg"}}

<div class="ui two column grid basic middle aligned segment">

<div class="column">

  <form class="ui stacked segment form" action="/updatereg/" method="POST">
    <h3 class="ui header">Update Details</h3>
    <div class="two fields">
      <div class="field">
        <label>Name</label>
        <input placeholder="{{name}}" type="text" name="name">
      </div>
      <div class="field">
        <label>Gender</label>
        <select placeholder= {{gender}} name="gender" class="ui dropdown">
          <option value="M">Male</option>
          <option value="F">Female</option>
        </select>
      </div>
    </div>
    <div class="field">
      <label>Email</label>
      <input placeholder="{{email}}" type="email" name="email">
    </div>
    <div class="field">
      <label>Password</label>
      <input type="password" name="password">
    </div>
    <div class="field">
      <label>Address</label>
      <input placeholder="{{address}}" type="text" name="address">
    </div>
    <div class="two fields">
      <div class="field">
        <label>Height</label>
        <input placeholder="{{height}}" type="number" step="0.01" min="1" max="3" name="height">
      </div>
      <div class="field">
        <label>Starting Weight</label>
        <input placeholder="{{startingweight}}" type="number" step="0.01" min="0" max="250" name="startingweight">
      </div>
    </div>
    <button class="ui blue submit button">Update</button>
  </form>
</div>
 
</div>