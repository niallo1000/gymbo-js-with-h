

<div class="equal width">


  <form class="ui stacked segment form" action="/updatereg/" method="POST">
    <h3 class="ui header">Member Details </h3>
	
    <div class="four fields">
      <div class="field">
        <label>Name</label>
        <input placeholder="{{members.name}}" type="text" name="name" disabled="">
      </div>
	  
      <div class="field">
        <label>Gender</label>
        <select placeholder= {{members.gender}} name="gender" class="ui dropdown" disabled="">
          <option value="M">Male</option>
          <option value="F">Female</option>
        </select>
      </div>
	  

    <div class="field">
      <label>Email</label>
      <input placeholder="{{members.email}}" type="email" name="email" disabled="">
    </div>
	
    <div class="field">
      <label>Password</label>
      <input type="password" name="password">
    </div>
	    </div>
	
	    <div class="four fields">
    <div class="field">
      <label>Address</label>
      <input placeholder="{{members.address}}" type="text" name="address">
    </div> 
      <div class="field">
        <label>Height</label>
        <input placeholder="{{members.height}}" type="number" step="0.01" min="1" max="3" name="height">
      </div>
      <div class="field">
        <label>Starting Weight</label>
        <input placeholder="{{members.startingweight}}" type="number" step="0.01" min="0" max="250" name="startingweight">
      </div>
      <div class="field">
        <label> </label>
            <button class="ui blue submit button">Update</button>
      </div>
    </div>
  </form>
</div>